#!/bin/bash

unset ${!LC_*} ${!RC_LC_*} LANGUAGE RC_LANG
export LANG=en_US

set -e

cafile="/var/lib/pki/java-cacerts"
cafile_gcj="/var/lib/pki/gcj-cacerts"


for i in "$@"; do
	if [ "$i" = "-f" ]; then
		fresh=1
	elif [ "$i" = "-v" ]; then
		verbose=1
	fi
done

[ -z "$verbose" ] || echo "creating $cafile ..."
p11-kit extract --format=java-cacerts --purpose=server-auth --filter=ca-anchors --overwrite $cafile

